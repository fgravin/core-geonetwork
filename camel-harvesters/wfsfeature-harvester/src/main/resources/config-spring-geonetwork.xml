<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xmlns:cm="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://camel.apache.org/schema/spring
        http://camel.apache.org/schema/spring/camel-spring.xsd
        http://activemq.apache.org/schema/core
        http://activemq.apache.org/schema/core/activemq-core.xsd">

  <bean id="wfsfeatureHarvesterRouteBuilder"
        class="org.fao.geonet.harvester.wfsfeatures.HarvesterRouteBuilder"/>

  <bean id="featureIndexer"
        class="org.fao.geonet.harvester.wfsfeatures.FeatureIndexer">
    <property name="solrCollectionUrl" value="${solr.url}/${solr.collection}"/>
    <property name="featureCommitInterval" value="500"/>
    <property name="solrCommitWithinMs" value="10000"/>
  </bean>

  <cm:camelContext>
    <cm:jmxAgent id="agent" disabled="false"/>
    <cm:routeBuilder ref="wfsfeatureHarvesterRouteBuilder"/>
  </cm:camelContext>
</beans>
