<overrides>
	<import file="/WEB-INF/config-overrides-sextant-props-c2cpc55.xml"/>
	<file name=".*/WEB-INF/config-gui.xml">
		<replaceAtt xpath="client" attName="widget" value="true"/>
		<replaceAtt xpath="client" attName="url" value="${widget.url}"/>
		<replaceAtt xpath="client" attName="createParameter" value="#create"/>
		<replaceAtt xpath="client" attName="stateId" value="s"/>
		<replaceAtt xpath="client" attName="parameters" value="${widget.parameters}"/>
		<replaceXML xpath="map/proj">
			<crs code="EPSG:4326" default="1" edit="1"/>
			<crs code="EPSG:2154" def="+proj=lcc +lat_1=49 +lat_2=44 +lat_0=46.5 +lon_0=3 +x_0=700000 +y_0=6600000 +ellps=GRS80 +towgs84=0,0,0,0,0,0,0 +units=m +no_defs"/>
			<crs code="EPSG:900913" def="+proj=merc +lon_0=0 +k=1 +x_0=0 +y_0=0 +ellps=WGS84 +datum=WGS84 +units=m +no_defs "/>
			<crs code="EPSG:3035" def="+proj=laea +lat_0=52 +lon_0=10 +x_0=4321000 +y_0=3210000 +ellps=GRS80 +units=m +no_defs"/>
		</replaceXML>
	</file>
	<file name=".*/WEB-INF/config.xml">
		<replaceText xpath="general/uploadDir">../../temp/</replaceText>
		<replaceText xpath="general/maxUploadSize">100</replaceText>
		<replaceXML xpath="resources">
			<resource enabled="true">
				<name>main-db</name>
				<provider>jeeves.resources.dbms.ApacheDBCPool</provider>
				<config>
					<user>${db.user}</user>
					<password>${db.pass}</password>
					<driver>${db.driver}</driver>
					<url>${db.url}</url>
					<poolSize>20</poolSize>
					<minIdle>0</minIdle>
					<maxIdle>10</maxIdle>
					<validationQuery>SELECT 1</validationQuery>
				</config>
			</resource>
		</replaceXML>
	</file>
	
	<!-- Add custom CSW service -->
	<file name=".*/WEB-INF/config-csw-servers.xml">
		<addXML xpath="services">
			<service name="csw-inspire">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+inspirerelated:on"/>
				</class>
			</service>
			<service name="csw-HUMBOLDT">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:HUMBOLDT"/>
				</class>
			</service>
			<service name="csw-NATURA2000">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:NATURA2000"/>
				</class>
			</service>
			<service name="csw-INTERRISK">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:INTERRISK"/>
				</class>
			</service>
			<service name="csw-GRANULATS">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:GRANULATS"/>
				</class>
			</service>
			<service name="csw-SINPMER">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:SINPMER"/>
				</class>
			</service>
			<service name="csw-MEDBENTH">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:MEDBENTH"/>
				</class>
			</service>
			<service name="csw-PHOTOS_ANCIENNES">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:PHOTOS_ANCIENNES"/>
				</class>
			</service>
			<service name="csw-REBENT">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:REBENT"/>
				</class>
			</service>
			<service name="csw-CATALOGUE">
				<class name=".services.main.CswDiscoveryDispatcher">
					<param name="filter" value="+group_public:CATALOGUE"/>
				</class>
			</service>
		</addXML>
	</file>
	<file name=".*/WEB-INF/user-profiles.xml">
		<addXML xpath="profile[@name='Guest']">
			<allow service="csw-inspire"/>
			<allow service="csw-HUMBOLDT"/>
			<allow service="csw-NATURA2000"/>
			<allow service="csw-INTERRISK"/>
			<allow service="csw-GRANULATS"/>
			<allow service="csw-SINPMER"/>
			<allow service="csw-MEDBENTH"/>
			<allow service="csw-PHOTOS_ANCIENNES"/>
			<allow service="csw-REBENT"/>
			<allow service="csw-CATALOGUE"/>
		</addXML>
	</file>
	
